<h1><%= t('Listing tasks') %></h1>
<div class="row">
  <div class="small-6 large-6 columns">
    <h2><%= t('Unfinished Tasks') %></h2>
    <table>
      <thead>
        <tr>
          <th><%= t :Title %></th>
          <th><%= t :Duration %></th>
          <th><%= t :Startdate %></th>
          <th><%= t :Deadline %></th>
          <th><%= t :Author %></th>
          <th><%= t :Checked %></th>
          <!--<th colspan="3"></th>-->
        </tr>
      </thead>

      <tbody>
        <% @tasks.where(checked: false).order(deadline: :desc).each do |task| %>
          <tr>
            <td><%= task.title %></td>
            <td><%= task.duration %></td>
            <td><%= task.startdate %></td>
            <td><%= task.deadline %></td>
            <td><%= task.author %></td>
            <td><%= task.checked %></td>
            <td><%= link_to I18n.t('Show'), task %></td>
            <% if user_signed_in? %>
              <% if current_user.user_id == task.user_id %>
                <td><%= link_to I18n.t('Edit'), edit_task_path(task) %></td>
                <td><%= link_to I18n.t('Destroy'), task, method: :delete, data: { confirm: I18n.t('Are you sure?') } %></td>
              <% end %>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="small-6 large-6 columns">
    <h2><%= t('Finished Task') %></h2>
    <table>
      <thead>
        <tr>
          <th><%= t :Title %></th>
          <th><%= t :Duration %></th>
          <th><%= t :Startdate %></th>
          <th><%= t :Deadline %></th>
          <th><%= t :Author %></th>
          <th><%= t :Checked %></th>
          <!--<th colspan="3"></th>-->
        </tr>
      </thead>

      <tbody>
        <% @tasks.where(checked: true).order(deadline: :desc).each do |task| %>
          <tr>
            <td><%= task.title %></td>
            <td><%= task.duration %></td>
            <td><%= task.startdate %></td>
            <td><%= task.deadline %></td>
            <td><%= task.author %></td>
            <td><%= task.checked %></td>
            <td><%= link_to I18n.t('Show'), task %></td>
            <% if user_signed_in? %>
              <% if current_user.user_id == task.user_id %>
                <td><%= link_to I18n.t('Edit'), edit_task_path(task) %></td>
                <td><%= link_to I18n.t('Destroy'), task, method: :delete, data: { confirm: I18n.t('Are you sure?') } %></td>
              <% end %>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>


<br>
<% if user_signed_in? %>
  <%= link_to I18n.t('New Task'), new_task_path, class: "button" %>
<% else %>
  <%= link_to I18n.t('Log in'), new_user_session_path, class: "button" %>
<% end %>
