<h1>Listing tasks</h1>
<div class="row">
  <div class="small-centered large-centered columns">
    <h2>Unfinished Tasks</h2>
    <table>
      <thead>
        <tr>
          <th>Title</th>
          <th>Duration</th>
          <th>Startdate</th>
          <th>Deadline</th>
          <th>Author</th>
          <th>Checked</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @tasks.where(checked: false).order(deadline: :desc).each do |task| %>
          <tr>
            <td><%= task.title %></td>
            <td><%= task.duration %></td>
            <td><%= task.startdate %></td>
            <td><%= task.deadline %></td>
            <td><%= task.author %></td>
            <td><%= task.checked %></td>
            <td><%= link_to 'Show', task %></td>
            <% if user_signed_in? %>
              <% if current_user.user_id == task.user_id %>
                <td><%= link_to 'Edit', edit_task_path(task) %></td>
                <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              <% end %>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="small-centered large-centered columns">
    <h2>Finished Task</h2>
    <table>
      <thead>
        <tr>
          <th>Title</th>
          <th>Duration</th>
          <th>Startdate</th>
          <th>Deadline</th>
          <th>Author</th>
          <th>Checked</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @tasks.where(checked: true).order(deadline: :desc).each do |task| %>
          <tr>
            <td><%= task.title %></td>
            <td><%= task.duration %></td>
            <td><%= task.startdate %></td>
            <td><%= task.deadline %></td>
            <td><%= task.author %></td>
            <td><%= task.checked %></td>
            <td><%= link_to 'Show', task %></td>
            <% if user_signed_in? %>
              <% if current_user.user_id == task.user_id %>
                <td><%= link_to 'Edit', edit_task_path(task) %></td>
                <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              <% end %>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>


<br>
<% if user_signed_in? %>
  <%= link_to 'New Task', new_task_path, class: "button" %>
<% else %>
  <%= link_to 'Log in', new_user_session_path, class: "button" %>
<% end %>
