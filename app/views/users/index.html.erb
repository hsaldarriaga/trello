<h1>Listing users</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Username</th>
      <th>Name</th>
      <th>Lastname</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.user_id %></td>
        <td><%= user.username %></td>
        <td><%= user.name %></td>
        <td><%= user.lastname %></td>
        <td><%= link_to 'Show', user %></td>
        <% if user_signed_in? %>
          <% if current_user.user_id == user.user_id %>
            <td><%= link_to 'Edit', edit_user_registration_path(user) %></td>
            <td><%= link_to "Cancel my account", registration_path(user), data: { confirm: "Are you sure?" }, method: :delete %></td>
          <% end %>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
