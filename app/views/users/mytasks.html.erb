<h1>My Tasks</h1>
<% if user_signed_in? %>
<div class="row">
	<div class="small-4 large-4 columns">
		<h4>Task created by me</h4>
		<table>
			<thead>
				<tr>
					<th>Task name</th>
				</tr>
			</thead>
			<tbody>
				<% @my_tasks.each do |task| %>
					<tr>
						<td><%= task.title %></td>
						<td><%= link_to 'Show', task %></td>
					</tr>
				<% end %>
			</tbody>
		</table>
	</div>
	<div class="small-4 large-4 columns">
		<h4>Task where I am responsible</h4>
		<table>
			<thead>
				<tr>
					<th>Task name</th>
				</tr>
			</thead>
			<tbody>
				<% @my_responsible_tasks.each do |task| %>
					<tr>
						<td><%= task.title %></td>
						<td><%= link_to 'Show', task %></td>
					</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>
<% else %>
	<h1>You need to authenticate first</h1>
<% end %>