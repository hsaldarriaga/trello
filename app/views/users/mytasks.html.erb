<h1>My Tasks</h1>

<div class="row">
	<div class="small-4 large-4 columns">
		<table>
			<thead>
				<tr>
					<th>Task name</th>
				</tr>
			</thead>
			<tbody>
				<% @my_tasks.each do |task| %>
					<td><%= task.name %></td>
					<td><%= link_to I18n.t('Show'), task %></td>
		            <% if user_signed_in? %>
		              <% if current_user.user_id == task.user_id %>
		                <td><%= link_to I18n.t('Edit'), edit_task_path(task) %></td>
		                <td><%= link_to I18n.t('Destroy'), task, method: :delete, data: { confirm: I18n.t('Are you sure?') } %></td>
		              <% end %>
		            <% end %>
				<% end %>
			</tbody>
		</table>
	</div>
	<div class="small-4 large-4 columns">
		<table>
			<thead>
				<tr>
					<th>Task name</th>
				</tr>
			</thead>
			<tbody>
				<% @my_responsible_tasks.each do |task| %>
					<td><%= task.name %></td>
					<td><%= link_to I18n.t('Show'), task %></td>
				<% end %>
			</tbody>
		</table>
	</div>
</div>